@model BudgetTracker.Views.Account.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="row">
    <div class="mx-auto mt-4 w-50 widget">
        <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 form-floating">
                <input type="email" class="form-control" asp-for="Email" placeholder="">
                <label asp-for="Email"></label>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3 form-floating">
                <input type="password" class="form-control" asp-for="Password" placeholder="">
                <label asp-for="Password"></label>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="mb-3">
                <input class="form-check-input" type="checkbox" value="false" asp-for="RememberMe" />
                <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-dark px-5 mt-3">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}